{
  "title": "My rules",
  "rules": [
    {
      "description": "Toggle iTerm2",
      "manipulators": [
        {
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "shell_command": "osascript ~/.dotfiles/applescripts/toggle-program.applescript iTerm2"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Toggle Telegram",
      "manipulators": [
        {
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "shell_command": "osascript ~/.dotfiles/applescripts/toggle-program.applescript Telegram"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Toggle mpv",
      "manipulators": [
        {
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "shell_command": "osascript ~/.dotfiles/applescripts/bring-to-front-by-search.applescript mpv"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Toggle Emacs",
      "manipulators": [
        {
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "shell_command": "osascript ~/.dotfiles/applescripts/bring-to-front-by-search.applescript emacs"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Dismiss current",
      "manipulators": [
        {
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "shell_command": "osascript ~/.dotfiles/applescripts/dismiss-current.applescript"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
