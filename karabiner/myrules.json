{
  "title": "My rules",
  "rules": [
    {
      "description": "Home to ctrl+a",
      "manipulators": [
        {
          "from": {
            "key_code": "home"
          },
          "to": [
            {
              "key_code": "a",
              "modifiers": "control"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Shift+home to shift+ctrl+a",
      "manipulators": [
        {
          "from": {
            "key_code": "home",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "a",
              "modifiers": [
                "shift",
                "control"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "End to ctrl+e",
      "manipulators": [
        {
          "from": {
            "key_code": "end"
          },
          "to": [
            {
              "key_code": "e",
              "modifiers": "control"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Shift+end to shift+ctrl+e",
      "manipulators": [
        {
          "from": {
            "key_code": "end",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "e",
              "modifiers": [
                "shift",
                "control"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
